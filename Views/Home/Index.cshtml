<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form method="post" action="@Url.Action("generateMoodPlaylist")">

                <div class="form-group">
                    <textarea class="formcontrol" name="query" id="query" placeholder="Enter your text" rows="4"></textarea>
                </div>

                <br />
                
                <button type="submit" class="btn btn-success">Submit</button>
            </form>

            @if (ViewBag.Playlist != null)
            {
                <div class="mt-4">
                    <p>Result</p>
                    <div class="alert alert-info">
                        @foreach (var song in ViewBag.Playlist.Songs)
                        {
                            <p>@song.Title by @song.Artist</p>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
</div>
